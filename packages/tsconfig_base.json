{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": false,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "esnext.asynciterable"
    ],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["../config/typescript/**/*.d.ts"]
}
